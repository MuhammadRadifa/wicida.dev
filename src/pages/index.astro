---
// Global Imports
import '@fontsource/poppins'
import 'animate.css'

// Component Imports
import Head from '../components/Head.astro'
import Header from '../components/Header.astro'
import DesktopLayout from '../layouts/desktop.astro'
import MainSection from '../components/MainSection.astro'
import AboutUs from '../components/AboutUs.astro'
import Member from '../components/Member.astro'
import Project from '../components/Project.astro'
import Achivement from '../components/Achivement.astro'
import Footer from '../components/Footer.astro'
import Copyright from '../components/Copyright.astro'
import ToTopButton from '../components/ToTopButton.astro'
import JoinButton from '../components/JoinButton.astro'
import { getCollection } from 'astro:content'

export type Member = (typeof members)[0]
export type Project = (typeof projects)[0]

const memberEntries = await getCollection('coreTeamMembers')
const members = memberEntries.map((entry) => entry.data)

const projectEntries = await getCollection('projectList')
const projects = projectEntries.map((entry) => entry.data)
---

<html lang="en" class="scroll-smooth">
    <Head />
    <body>
        <Header />
        <DesktopLayout>
            <MainSection />
            <AboutUs />
            <Member members={members} />
            <Project projects={projects} />
            <Achivement />
            <Footer />
            <Copyright />
            <JoinButton />
            <ToTopButton />
        </DesktopLayout>
    </body>
</html>
