---
import { Icon } from 'astro-icon'
---

<div
    class="footer-container py-16 pl-9 pr-9 flex flex-col md:flex-row items-center justify-evenly bg-footerBackground gap-2 md:gap-5 xl:gap-14"
>
    <div
        class="widev-container flex flex-col items-center md:items-start justify-between gap-10"
    >
        <div class="widev__image">
            <img src="/widev.png" alt="widev logo" class="sm:w-1/2 xl:w-100" />
        </div>
        <div class="widev_motto">
            <p
                class="xl:text-xl font-medium text-center md:text-left xl:w-80 sm:w-100 sm:text-base"
            >
                We Build, We Learn, and <br />
                 We Develope For Better Future
            </p>
        </div>
        <div class="widev_links">
            <div class="flex flex-row gap-8">
                <a href="" class="button text-primary">
                    <Icon
                        name="ant-design:github-filled"
                        class="xl:w-8 xl:h-8 sm:h-6 sm:w-6"
                    />
                </a>
                <a href="" class="button text-primary">
                    <Icon
                        name="ant-design:instagram-filled"
                        class="xl:w-8 xl:h-8 sm:h-6 sm:w-6"
                    />
                </a>
                <a href="" class="button text-primary">
                    <Icon
                        name="ic:outline-facebook"
                        class="xl:w-8 xl:h-8 sm:h-6 sm:w-6"
                    />
                </a>
                <a href="" class="button text-primary">
                    <Icon
                        name="mdi:linkedin"
                        class="xl:w-8 xl:h-8 sm:h-6 sm:w-6"
                    />
                </a>
            </div>
        </div>
    </div>
    <div class="link flex flex-row gap-3 md:gap-10">
        <div class="link__container-1 flex md:flex-col gap-3 md:gap-7">
            <a href="#about" class="bottom-nav xl:text-2xl sm:text-base"
                >About</a
            >
            <a href="#member" class="bottom-nav xl:text-2xl sm:text-base"
                >Member</a
            >
        </div>
        <div class="link__container-2 flex md:flex-col gap-3 md:gap-7">
            <a href="#project" class="bottom-nav xl:text-2xl sm:text-base"
                >Project</a
            >
            <a href="#achievement" class="bottom-nav xl:text-2xl sm:text-base"
                >Achievement</a
            >
        </div>
    </div>
    <div class="email-and-location mt-4 md:flex-col flex gap-4">
        <div class="email">
            <p class="xl:text-3xl sm:text-xl font-medium text-primary">
                WIDEV@Gmail.com
            </p>
        </div>
        <div class="location xl:w-80 sm:w-100">
            <p class="xl:text-xl sm:text-sm font-medium text-start">
                Jl. M. Yamin, Gn. Kelua, Kec. Samarinda Ulu, Kota Samarinda,
                Kalimantan Timur 75123
            </p>
        </div>
    </div>
</div>

<script is:inline>
    // when anchor clicked scroll to section - 100px
    const bottomAncorLinks = document.querySelectorAll('.bottom-nav')
    const bottomAnchorLinksArr = Array.prototype.slice.call(bottomAncorLinks)

    bottomAnchorLinksArr.forEach((link) => {
        link.addEventListener('click', (e) => {
            e.preventDefault()
            const targetId = link.hash
            const targetElement = document.querySelector(targetId)
            const targetOffsetTop =
                window.scrollY + targetElement.getBoundingClientRect().top - 100
            window.scrollTo({
                top: targetOffsetTop,
                behavior: 'smooth',
            })
        })
    })
</script>
